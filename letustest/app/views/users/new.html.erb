<% provide(:title, 'Sign up') %>

<!-- <p>Find me in app/views/users/new.html.erb</p> -->

<div class="container">
	<div id="signup">
		<%= render 'shared/error_messages' %>
		<h1>Sign up</h1>
		<%= form_for(@user) do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>
		<br/>

		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

		<% end %>
		Already have an account ? <%= link_to "Sign in", signin_path %> <br/>
		If you want to join us as a Tester, <%= link_to "Tester Sign up", new_tester_path %>
	</div>
</div>