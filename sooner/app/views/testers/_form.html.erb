<%= form_for @tester do |f| %>
  <%= f.error_messages %>
<% if params[:project] %><input type="hidden" id="tester_project_id" name="tester[project_id]" value="<%= params[:project] %>" /><% end %>  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>
  <p><%= f.submit %></p>
<% end %>
