<% provide(:title, 'Promote your challenge') %>

<div class="container">
  <div class="content-wrapper clearfix">
    <div class="row">
      <div class="span12">
        <div class="box round-corners box-shadow">
          <h3><%= @feedback.name %></h3>
          <p><%= @feedback.questions %></p>
          <p>Please verify this information is correct. Click edit to make changes before purchasing the feedback.</p>
        </div>
      </div>

      <div class="span3">
        <ul class="nav nav-tabs nav-stacked">
          <li class="view-all">
            <%= link_to feedback_path(@feedback.id) do %>
                <i class="icon-arrow-left icon-gray"></i> View All Challenges
            <% end %>
          </li>
          <li><a href="#">Challenge Overview</a></li>
          <li class="active"><a href="#"><i class="icon-edit icon-gray"></i>Description &amp; Photo</a></li>
          <li><a href="#"><i class="icon-certificate icon-gray"></i>Terms</a></li>
          <li><a href="#"><i class="icon-user icon-gray"></i>Admins</a></li>
          <li><a href="#"><i class="icon-user icon-gray"></i>Testers</a></li>
          <li class="divider"></li>
          <li><a href="#"><i class="icon-cog icon-gray"></i>Settings</a></li>
          <li><a href="#"><i class="icon-thumbs-up icon-gray"></i>Improve</a></li>
          <li><a href="#"><i class="icon-bullhorn icon-gray"></i>Promote</a></li>
        </ul>
      </div>

      <div class="span9 content">
        <div class="box round-corners box-shadow">
          <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %>"><span style="opacity: 1; "><%= value %></span>
                <a class="close" data-dismiss="alert" href="#" onclick="$(this).parent().fadeOut();return false;">×</a>
              </div>
          <% end %>
          <!--<div class="alert alert-success">-->
          <!--<span style="opacity: 1; ">Your challenge was added successfully</span>-->
          <!--<a class="close" data-dismiss="alert" href="#" onclick="$(this).parent().fadeOut();return false;">×</a>-->
          <!--</div>-->

          <div class="box round-corners box-shadow">
            <div class="analytics-wrapper">
              <div id="manage-activation">
                <strong>To see performance analytics</strong>
                <p>Your challenge description has 1 words. Successful challenges have over 100 words in the description.</p>
              </div>

            </div>
          </div>

          <%= form_for(@feedback) do |f| %>
              <% if @feedback.errors.any? %>
                  <div id="error_explanation">
                    <div class="alert alert-error"><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</div>

                    <ul>
                      <% @feedback.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <fieldset>
                <legend><i class="icon-ok-sign" style="margin-top:5px"></i> Required</legend>
                <div class="project-field pname">
                  <%= f.label :name, "Facebook", :class => "control-label" %>
                  <%#= f.text_field :name, :placeholder => "Example: Let{us}Test" %>
                </div>

                <legend><i class="icon-info-sign" style="margin-top:5px"></i> Optional</legend>
                <div class="project-field contact">
                  <%= f.label :bugsystem, "Twitter", :class => "control-label" %>
                  <%#= f.text_field :bugsystem, :placeholder => "Example: Redmine, Bugzilla, Mantis, etc or Let{us}test" %>
                </div>

                <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
                <%= f.submit "Cancel", class: "btn btn-large btn-primary" %>
              </fieldset>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>